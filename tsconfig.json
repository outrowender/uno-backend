{
    "compilerOptions": {
      "outDir": "dist",
      "target": "es2017",
      "module": "commonjs",
      "allowJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*.ts"
    ]
  }